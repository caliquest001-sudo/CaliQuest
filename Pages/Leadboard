import React, { useState } from 'react';
import { motion } from 'framer-motion';
import { useNavigate } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import { Button } from "@/components/ui/button";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Loader2, ArrowLeft, Trophy, Medal, Award } from 'lucide-react';
import LevelBadge from '@/components/LevelBadge';
import UserProfileModal from '@/components/community/UserProfileModal';

const levelColors = {
  beginner: '#FCF1C3',
  intermediate: '#FC0D0F',
  advanced: '#FF1B4C',
  elite: '#C0C0C0'
};

const rankIcons = {
  1: Trophy,
  2: Medal,
  3: Award
};

export default function Leaderboard() {
  const navigate = useNavigate();
  const [selectedLevel, setSelectedLevel] = useState('elite');
  const [selectedUserId, setSelectedUserId] = useState(null);
  const [isProfileModalOpen, setIsProfileModalOpen] = useState(false);

  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me()
  });

  const { data: profile } = useQuery({
    queryKey: ['userProfile', user?.email],
    queryFn: async () => {
      const profiles = await base44.entities.UserProfile.filter({ user_id: user.email });
      return profiles[0] || null;
    },
    enabled: !!user?.email
  });

  const { data: leaderboardData = [], isLoading } = useQuery({
    queryKey: ['leaderboard', selectedLevel],
    queryFn: async () => {
      const entries = await base44.entities.LeaderboardEntry.filter({ skill_level: selectedLevel });
      
      return entries
        .sort((a, b) => (b.total_xp || 0) - (a.total_xp || 0))
        .map((p, index) => ({ ...p, rank: index + 1 }));
    }
  });

  const currentLevel = profile?.level || 'beginner';
  const levelColor = levelColors[selectedLevel];
  const currentUserRank = leaderboardData.find(p => p.user_id === user?.email);

  const handleOpenProfile = (userId) => {
    setSelectedUserId(userId);
    setIsProfileModalOpen(true);
  };

  const handleCloseProfile = () => {
    setIsProfileModalOpen(false);
    setSelectedUserId(null);
  };

  if (isLoading) {
    return (
      <div className="min-h-screen bg-black flex items-center justify-center">
        <Loader2 className="w-8 h-8 animate-spin" style={{ color: levelColor }} />
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-zinc-950 pb-24">
      {/* Header */}
      <div className="sticky top-0 z-10 bg-zinc-950/95 backdrop-blur-sm border-b border-zinc-800">
        <div className="max-w-4xl mx-auto px-6 py-4">
          <Button
            variant="ghost"
            onClick={() => navigate(createPageUrl('Home'))}
            className="text-zinc-400 hover:text-white -ml-2 mb-4"
          >
            <ArrowLeft className="w-5 h-5 mr-2" />
            Back
          </Button>
          
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <div 
                className="w-10 h-10 rounded-full flex items-center justify-center"
                style={{ backgroundColor: `${levelColor}20` }}
              >
                <Trophy className="w-5 h-5" style={{ color: levelColor }} />
              </div>
              <div>
                <h1 className="text-2xl font-bold text-white">Leaderboard</h1>
                <p className="text-zinc-400 text-sm">Compete with the best</p>
              </div>
            </div>
          </div>

          {/* Level Filter */}
          <div className="mt-6">
            <Select value={selectedLevel} onValueChange={setSelectedLevel}>
              <SelectTrigger className="bg-zinc-900 border-zinc-800 text-white">
                <SelectValue />
              </SelectTrigger>
              <SelectContent className="bg-zinc-900 border-zinc-800">
                <SelectItem value="beginner" className="text-white">Beginner</SelectItem>
                <SelectItem value="intermediate" className="text-white">Intermediate</SelectItem>
                <SelectItem value="advanced" className="text-white">Advanced</SelectItem>
                <SelectItem value="elite" className="text-white">Elite</SelectItem>
              </SelectContent>
            </Select>
          </div>
        </div>
      </div>

      {/* Leaderboard */}
      <div className="max-w-4xl mx-auto px-6 py-6">
        {/* Your Rank Card */}
        {currentUserRank && selectedLevel === currentLevel && (
          <motion.div
            initial={{ opacity: 0, y: -10 }}
            animate={{ opacity: 1, y: 0 }}
            className="mb-6 bg-zinc-900 rounded-2xl p-5 border-2"
            style={{ borderColor: levelColor }}
          >
            <p className="text-zinc-400 text-xs mb-2 uppercase tracking-wider">Your Rank</p>
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-4">
                <div 
                  className="w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg"
                  style={{ backgroundColor: `${levelColor}20`, color: levelColor }}
                >
                  #{currentUserRank.rank}
                </div>
                <div>
                  <p className="text-white font-bold">{currentUserRank.username || 'You'}</p>
                  <LevelBadge level={currentUserRank.skill_level} size="xs" />
                </div>
              </div>
              <div className="text-right">
                <p className="text-2xl font-bold text-white">{currentUserRank.total_xp || 0}</p>
                <p className="text-zinc-500 text-xs">XP</p>
              </div>
            </div>
          </motion.div>
        )}

        {/* Leaderboard List */}
        {leaderboardData.length === 0 ? (
          <div className="text-center py-16">
            <div 
              className="w-20 h-20 rounded-full mx-auto mb-4 flex items-center justify-center"
              style={{ backgroundColor: `${levelColor}20` }}
            >
              <Trophy className="w-10 h-10" style={{ color: levelColor }} />
            </div>
            <h3 className="text-xl font-bold text-white mb-2">No athletes yet</h3>
            <p className="text-zinc-400">Be the first in this level!</p>
          </div>
        ) : (
          <div className="space-y-3">
            {leaderboardData.map((player, index) => {
              const RankIcon = rankIcons[player.rank];
              const isCurrentUser = player.user_id === user?.email;
              
              return (
                <motion.div
                  key={player.id}
                  initial={{ opacity: 0, x: -20 }}
                  animate={{ opacity: 1, x: 0 }}
                  transition={{ delay: index * 0.05 }}
                  className={`bg-zinc-900/50 rounded-2xl p-4 border ${
                    isCurrentUser ? 'border-zinc-700' : 'border-zinc-800/50'
                  }`}
                >
                  <div className="flex items-center gap-4">
                    {/* Rank */}
                    <div className="w-12 h-12 flex-shrink-0 flex items-center justify-center">
                      {RankIcon ? (
                        <RankIcon 
                          className="w-8 h-8" 
                          style={{ 
                            color: player.rank === 1 ? '#FFD700' : 
                                   player.rank === 2 ? '#C0C0C0' : 
                                   '#CD7F32' 
                          }} 
                        />
                      ) : (
                        <span className="text-2xl font-bold text-zinc-600">
                          {player.rank}
                        </span>
                      )}
                    </div>

                    {/* User Info */}
                    <div className="flex-1 min-w-0">
                      <div className="flex items-center gap-2 mb-1">
                        <button
                          onClick={() => handleOpenProfile(player.user_id)}
                          className="font-bold truncate hover:underline text-left"
                          style={{ color: levelColors[player.skill_level] }}
                        >
                          {player.username || 'Anonymous'}
                          {isCurrentUser && <span className="text-zinc-500 ml-1">(You)</span>}
                        </button>
                      </div>
                      <LevelBadge level={player.skill_level} size="xs" />
                    </div>

                    {/* Stats */}
                    <div className="text-right flex-shrink-0">
                      <p className="text-xl font-bold text-white">{player.total_xp || 0}</p>
                      <p className="text-zinc-500 text-xs">XP</p>
                    </div>
                  </div>
                </motion.div>
              );
            })}
          </div>
        )}
      </div>

      {/* User Profile Modal */}
      <UserProfileModal
        userId={selectedUserId}
        isOpen={isProfileModalOpen}
        onClose={handleCloseProfile}
      />
    </div>
  );
}