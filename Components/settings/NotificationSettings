import React, { useState } from 'react';
import { Bell, BellOff } from 'lucide-react';
import { Switch } from "@/components/ui/switch";
import { cn } from "@/lib/utils";

export default function NotificationSettings() {
  const [notifications, setNotifications] = useState({
    dailyReminders: true,
    achievementAlerts: true,
    weeklyProgress: false,
    parkNearby: true
  });

  const handleToggle = (key) => {
    setNotifications(prev => ({
      ...prev,
      [key]: !prev[key]
    }));
  };

  const settings = [
    {
      key: 'dailyReminders',
      label: 'Daily Workout Reminders',
      description: 'Get notified about your daily challenge',
      icon: Bell
    },
    {
      key: 'achievementAlerts',
      label: 'Achievement Alerts',
      description: 'Celebrate your milestones and progress',
      icon: Bell
    },
    {
      key: 'weeklyProgress',
      label: 'Weekly Progress Summary',
      description: 'Receive weekly stats and insights',
      icon: Bell
    },
    {
      key: 'parkNearby',
      label: 'Park Notifications',
      description: 'Get alerts when near workout parks',
      icon: Bell
    }
  ];

  return (
    <div className="space-y-4">
      <div>
        <h2 className="text-lg font-semibold text-white mb-1">Notifications</h2>
        <p className="text-sm text-zinc-400">Manage how we notify you</p>
      </div>

      <div className="bg-blue-500/10 border border-blue-500/30 rounded-2xl p-4 mb-4">
        <p className="text-xs text-blue-200">
          Push notifications are currently in development. These settings will take effect once notifications are enabled.
        </p>
      </div>

      <div className="space-y-2">
        {settings.map((setting) => {
          const Icon = notifications[setting.key] ? Bell : BellOff;
          const isEnabled = notifications[setting.key];
          
          return (
            <div
              key={setting.key}
              className={cn(
                "bg-zinc-800/50 border rounded-2xl p-4 transition-all",
                isEnabled ? "border-lime-400/30" : "border-zinc-700/50"
              )}
            >
              <div className="flex items-center justify-between gap-3">
                <div className="flex items-start gap-3 flex-1 min-w-0">
                  <div className={cn(
                    "w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0",
                    isEnabled ? "bg-lime-400/10" : "bg-zinc-700/50"
                  )}>
                    <Icon className={cn(
                      "w-5 h-5",
                      isEnabled ? "text-lime-400" : "text-zinc-500"
                    )} />
                  </div>
                  <div className="min-w-0 flex-1">
                    <p className={cn(
                      "font-medium",
                      isEnabled ? "text-white" : "text-zinc-400"
                    )}>{setting.label}</p>
                    <p className="text-xs text-zinc-500 leading-relaxed mt-0.5">
                      {setting.description}
                    </p>
                  </div>
                </div>
                <Switch
                  checked={isEnabled}
                  onCheckedChange={() => handleToggle(setting.key)}
                  className="flex-shrink-0"
                />
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );
}