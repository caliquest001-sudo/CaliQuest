import React, { useState } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { base44 } from '@/api/base44Client';
import { useMutation, useQueryClient } from '@tanstack/react-query';
import { Loader2, Upload, X, Image as ImageIcon, Video } from 'lucide-react';
import { toast } from 'sonner';

export default function CreatePostModal({ open, onClose, user, profile, currentMonth }) {
  const queryClient = useQueryClient();
  const [caption, setCaption] = useState('');
  const [file, setFile] = useState(null);
  const [preview, setPreview] = useState(null);
  const [uploading, setUploading] = useState(false);

  const createPostMutation = useMutation({
    mutationFn: async (postData) => {
      return base44.entities.ProgressPost.create(postData);
    },
    onSuccess: () => {
      queryClient.invalidateQueries(['progressPosts']);
      toast.success('Post created successfully!');
      handleClose();
    },
    onError: () => {
      toast.error('Failed to create post');
    }
  });

  const handleFileSelect = (e) => {
    const selectedFile = e.target.files?.[0];
    if (!selectedFile) return;

    // Validate file type
    const isImage = selectedFile.type.startsWith('image/');
    const isVideo = selectedFile.type.startsWith('video/');
    
    if (!isImage && !isVideo) {
      toast.error('Please select an image or video file');
      return;
    }

    // Create preview
    const previewUrl = URL.createObjectURL(selectedFile);
    setFile(selectedFile);
    setPreview(previewUrl);
  };

  const handleRemoveFile = () => {
    if (preview) {
      URL.revokeObjectURL(preview);
    }
    setFile(null);
    setPreview(null);
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    
    if (!file) {
      toast.error('Please select an image or video');
      return;
    }

    setUploading(true);

    try {
      // Upload file
      const { file_url } = await base44.integrations.Core.UploadFile({ file });

      // Create post
      const mediaType = file.type.startsWith('image/') ? 'image' : 'video';
      
      await createPostMutation.mutateAsync({
        user_id: user.email,
        user_name: profile?.display_name || user.full_name,
        user_level: profile?.level || 'beginner',
        media_url: file_url,
        media_type: mediaType,
        caption: caption.trim() || null,
        month: currentMonth
      });
    } catch (error) {
      toast.error('Failed to upload file');
      console.error(error);
    } finally {
      setUploading(false);
    }
  };

  const handleClose = () => {
    handleRemoveFile();
    setCaption('');
    onClose();
  };

  return (
    <Dialog open={open} onOpenChange={handleClose}>
      <DialogContent className="bg-zinc-900 border-zinc-800 text-white max-w-lg">
        <DialogHeader>
          <DialogTitle className="text-xl font-bold">Share Your Progress</DialogTitle>
        </DialogHeader>

        <form onSubmit={handleSubmit} className="space-y-4">
          {/* File Upload */}
          <div>
            <Label className="text-zinc-400 text-sm mb-2 block">Media</Label>
            
            {!preview ? (
              <label className="block">
                <Input
                  type="file"
                  accept="image/*,video/*"
                  onChange={handleFileSelect}
                  className="hidden"
                  id="media-upload"
                />
                <div className="border-2 border-dashed border-zinc-700 rounded-2xl p-8 text-center cursor-pointer hover:border-zinc-600 transition-colors">
                  <Upload className="w-12 h-12 mx-auto mb-3 text-zinc-600" />
                  <p className="text-zinc-400 text-sm mb-1">Click to upload image or video</p>
                  <p className="text-zinc-600 text-xs">Max 50MB</p>
                </div>
              </label>
            ) : (
              <div className="relative rounded-2xl overflow-hidden bg-zinc-800">
                {file?.type.startsWith('image/') ? (
                  <img src={preview} alt="Preview" className="w-full h-64 object-cover" />
                ) : (
                  <video src={preview} className="w-full h-64 object-cover" controls />
                )}
                <Button
                  type="button"
                  variant="ghost"
                  size="icon"
                  onClick={handleRemoveFile}
                  className="absolute top-2 right-2 bg-black/50 hover:bg-black/70 text-white"
                >
                  <X className="w-5 h-5" />
                </Button>
              </div>
            )}
          </div>

          {/* Caption */}
          <div>
            <Label htmlFor="caption" className="text-zinc-400 text-sm mb-2 block">
              Caption (Optional)
            </Label>
            <Textarea
              id="caption"
              value={caption}
              onChange={(e) => setCaption(e.target.value)}
              placeholder="Share your thoughts about your progress..."
              className="bg-zinc-800 border-zinc-700 text-white placeholder:text-zinc-500 min-h-[100px]"
              maxLength={500}
            />
            <p className="text-zinc-600 text-xs mt-1">{caption.length}/500</p>
          </div>

          {/* Actions */}
          <div className="flex gap-3 pt-2">
            <Button
              type="button"
              variant="outline"
              onClick={handleClose}
              className="flex-1 border-zinc-700 text-zinc-400 hover:text-white"
              disabled={uploading}
            >
              Cancel
            </Button>
            <Button
              type="submit"
              disabled={!file || uploading}
              className="flex-1 bg-lime-400 hover:bg-lime-500 text-zinc-900 font-bold"
            >
              {uploading ? (
                <>
                  <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                  Uploading...
                </>
              ) : (
                <>
                  <Upload className="w-4 h-4 mr-2" />
                  Post
                </>
              )}
            </Button>
          </div>
        </form>
      </DialogContent>
    </Dialog>
  );
}