import React, { useEffect, useRef, useState } from 'react';
import { useGoogleMapsLoader, getGoogleMaps } from './GoogleMapLoader';
import { Loader2, Navigation, AlertCircle } from 'lucide-react';
import { Button } from "@/components/ui/button";
import { cn } from "@/lib/utils";

/**
 * MapContainer Component
 * 
 * A production-ready Google Maps component with:
 * - Secure API key loading
 * - User geolocation support
 * - Dynamic markers with info windows
 * - Re-center functionality
 * - Responsive design
 * - Error handling
 * 
 * @param {Object} props
 * @param {string} props.apiKey - Google Maps API key (from env or config)
 * @param {Object} props.defaultCenter - Default map center { lat, lng }
 * @param {number} props.defaultZoom - Default zoom level
 * @param {Array} props.markers - Array of markers { id, position: { lat, lng }, title, content }
 * @param {Function} props.onMarkerClick - Callback when marker is clicked
 * @param {string} props.className - Additional CSS classes
 */
export default function MapContainer({
  apiKey,
  defaultCenter = { lat: 40.7128, lng: -74.0060 }, // New York City
  defaultZoom = 12,
  markers = [],
  onMarkerClick,
  className
}) {
  const mapRef = useRef(null);
  const mapInstanceRef = useRef(null);
  const markersRef = useRef([]);
  const infoWindowRef = useRef(null);
  const userMarkerRef = useRef(null);
  
  const [userLocation, setUserLocation] = useState(null);
  const [locationPermission, setLocationPermission] = useState('prompt');
  const [isGettingLocation, setIsGettingLocation] = useState(false);
  
  const { isMapLoaded, error: mapError } = useGoogleMapsLoader(apiKey);

  // Initialize map
  useEffect(() => {
    if (!isMapLoaded || !mapRef.current || mapInstanceRef.current) return;

    const google = getGoogleMaps();
    if (!google) return;

    // Create map instance
    const map = new google.maps.Map(mapRef.current, {
      center: defaultCenter,
      zoom: defaultZoom,
      mapTypeControl: true,
      streetViewControl: true,
      fullscreenControl: true,
      zoomControl: true,
      gestureHandling: 'greedy',
      styles: [
        {
          featureType: 'poi',
          elementType: 'labels',
          stylers: [{ visibility: 'off' }]
        }
      ]
    });

    mapInstanceRef.current = map;

    // Create info window (reusable)
    infoWindowRef.current = new google.maps.InfoWindow();

    // Try to get user location on mount
    getUserLocation();
  }, [isMapLoaded, defaultCenter, defaultZoom]);

  // Update markers when markers prop changes
  useEffect(() => {
    if (!mapInstanceRef.current || !isMapLoaded) return;

    const google = getGoogleMaps();
    if (!google) return;

    // Clear existing markers
    markersRef.current.forEach(marker => marker.setMap(null));
    markersRef.current = [];

    // Add new markers
    markers.forEach(markerData => {
      const marker = new google.maps.Marker({
        position: markerData.position,
        map: mapInstanceRef.current,
        title: markerData.title,
        animation: google.maps.Animation.DROP,
        icon: markerData.icon || {
          path: google.maps.SymbolPath.CIRCLE,
          scale: 8,
          fillColor: '#84cc16',
          fillOpacity: 1,
          strokeColor: '#ffffff',
          strokeWeight: 2
        }
      });

      // Add click listener
      marker.addListener('click', () => {
        if (markerData.content) {
          infoWindowRef.current.setContent(markerData.content);
          infoWindowRef.current.open(mapInstanceRef.current, marker);
        }
        
        if (onMarkerClick) {
          onMarkerClick(markerData);
        }
      });

      markersRef.current.push(marker);
    });
  }, [markers, isMapLoaded, onMarkerClick]);

  // Get user's current location
  const getUserLocation = () => {
    if (!navigator.geolocation) {
      setLocationPermission('denied');
      return;
    }

    setIsGettingLocation(true);

    navigator.geolocation.getCurrentPosition(
      (position) => {
        const location = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };
        
        setUserLocation(location);
        setLocationPermission('granted');
        setIsGettingLocation(false);

        // Center map on user location
        if (mapInstanceRef.current) {
          mapInstanceRef.current.setCenter(location);
          mapInstanceRef.current.setZoom(15);

          // Add user location marker
          const google = getGoogleMaps();
          if (google) {
            if (userMarkerRef.current) {
              userMarkerRef.current.setMap(null);
            }

            userMarkerRef.current = new google.maps.Marker({
              position: location,
              map: mapInstanceRef.current,
              title: 'Your Location',
              icon: {
                path: google.maps.SymbolPath.CIRCLE,
                scale: 10,
                fillColor: '#3b82f6',
                fillOpacity: 0.9,
                strokeColor: '#ffffff',
                strokeWeight: 3
              },
              zIndex: 1000
            });
          }
        }
      },
      (error) => {
        console.error('Geolocation error:', error);
        setLocationPermission('denied');
        setIsGettingLocation(false);
      },
      {
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 0
      }
    );
  };

  // Re-center on user location
  const handleRecenter = () => {
    if (userLocation && mapInstanceRef.current) {
      mapInstanceRef.current.setCenter(userLocation);
      mapInstanceRef.current.setZoom(15);
    } else {
      getUserLocation();
    }
  };

  // Loading state
  if (!isMapLoaded && !mapError) {
    return (
      <div className={cn("flex items-center justify-center bg-zinc-900", className)}>
        <div className="text-center">
          <Loader2 className="w-12 h-12 text-lime-400 animate-spin mx-auto mb-4" />
          <p className="text-zinc-400">Loading map...</p>
        </div>
      </div>
    );
  }

  // Error state
  if (mapError) {
    return (
      <div className={cn("flex items-center justify-center bg-zinc-900", className)}>
        <div className="text-center max-w-md px-6">
          <AlertCircle className="w-12 h-12 text-red-400 mx-auto mb-4" />
          <h3 className="text-white font-semibold mb-2">Map Error</h3>
          <p className="text-zinc-400 text-sm mb-4">{mapError}</p>
          <p className="text-zinc-500 text-xs">
            Please check that Google Maps API key is configured correctly.
          </p>
        </div>
      </div>
    );
  }

  return (
    <div className={cn("relative", className)}>
      {/* Map container */}
      <div ref={mapRef} className="w-full h-full" />

      {/* Controls overlay */}
      <div className="absolute top-4 right-4 flex flex-col gap-2">
        {/* Re-center button */}
        <Button
          onClick={handleRecenter}
          disabled={isGettingLocation}
          className="bg-white hover:bg-gray-100 text-zinc-900 shadow-lg"
          size="icon"
          title={userLocation ? "Re-center on your location" : "Get my location"}
        >
          {isGettingLocation ? (
            <Loader2 className="w-5 h-5 animate-spin" />
          ) : (
            <Navigation className={cn(
              "w-5 h-5",
              userLocation && "text-blue-600"
            )} />
          )}
        </Button>
      </div>

      {/* Location permission hint */}
      {locationPermission === 'denied' && (
        <div className="absolute bottom-4 left-1/2 -translate-x-1/2 bg-amber-500/90 backdrop-blur-sm text-white text-xs px-4 py-2 rounded-full shadow-lg">
          <AlertCircle className="w-3 h-3 inline mr-1" />
          Location permission denied
        </div>
      )}
    </div>
  );
}